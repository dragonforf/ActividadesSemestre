<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActividadesSemestre.Views.DirectorioPage">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Grid.Row="3"
                        ItemsSource="{Binding Contactos}"
                        SelectedItem="{Binding ContactoSeleccionado}"
                        SelectionMode="Single"
                        SelectionChangedCommand="{Binding AbrirDetalleContacto}">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Padding="10,10">
                            <Frame>
                                <Label Text="{Binding NombreContacto}" VerticalTextAlignment="Center" />
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>