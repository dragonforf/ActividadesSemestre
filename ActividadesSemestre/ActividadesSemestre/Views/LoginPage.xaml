<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ActividadesSemestre.LoginPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Registrarse" Clicked="Registrarse" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <Frame BackgroundColor="#AA2222" Padding="24" CornerRadius="0">
            <Label Text="¡Bienvienido!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Padding="30,10,30,10">
            <Entry x:Name="Usuario" Placeholder="Usuario" />
            <Entry x:Name="Clave" Placeholder="Clave" IsPassword="True" />
            <Button Text="Iniciar Sesión" Clicked="IniciarSesion" />
            <Label x:Name="Mensaje" />
        </StackLayout>
    </StackLayout>
</ContentPage>
